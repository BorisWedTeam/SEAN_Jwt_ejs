<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add Language</h4>
        </div>
        <div class="modal-body">
                <div class="row marginForm">
                        <div class="col-md-6">
                            <div class="col-md-3 text-right">Title</div>
                            <div class="col-md-9"><input type="text" id="title" class="form-control"/></div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-3 text-right">Description</div>
                            <div class="col-md-9"><textarea type="text"  id="description" class="form-control" rows=3></textarea></div>
                        </div>
                    </div>
                    <div class="row marginForm">
                        <div class="col-md-6">
